{
    "manifest_version": 3,
    "name": "!",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    },
    "background": {
      "service_worker": "scripts/background.js"
    },
    "content_scripts": [
      {
        "js": ["scripts/content.js"],
        "matches": [
          "https://www.twitch.tv/*"
        ]
      }
    ],
    "permissions": [
      "tabs",
      "storage"
    ]
}